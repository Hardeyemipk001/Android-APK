<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/textView"
                android:fontFamily="@font/asdaen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="center_horizontal"
                android:text="Team A"
                android:textColor="#D7242C2B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_a_score"
                android:fontFamily="serif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="#D7242C2B"
                android:textSize="90sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:fontFamily="serif"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bound_round"
                android:onClick="AddThreeForTeamA"
                android:text="+3 points"
                android:textSize="16sp" />


            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="serif"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bound_round"
                android:onClick="AddTwoForTeamA"
                android:text="+2 points"
                android:textSize="16sp" />


            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="serif"
                android:background="@drawable/bound_round"
                android:onClick="AddOneForTeamA"
                android:text="Free Throw"
                android:textSize="16sp" />


        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_marginTop="12dp"
            android:layout_height="389dp"
            android:background="@color/cardview_dark_background"/>

        <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/teamB"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/asdaen"
                android:gravity="center_horizontal"
                android:text="Team B"
                android:textColor="#D7242C2B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="#D7242C2B"
                android:textSize="90sp" />

            <Button
                android:id="@+id/buttonb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="serif"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bound_round"
                android:onClick="AddThreeForTeamB"
                android:text="+3 points"
                android:textSize="16sp" />


            <Button
                android:id="@+id/button2b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="serif"
                android:background="@drawable/bound_round"
                android:onClick="AddTwoForTeamB"
                android:text="+2 points"
                android:textSize="16sp" />


            <Button
                android:id="@+id/button3b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="serif"
                android:background="@drawable/bound_round"
                android:onClick="AddOneForTeamB"
                android:text="Free Throw"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:drawableRight="@drawable/name"
        android:paddingLeft="28dp"
        android:fontFamily="@font/abdullah"
        android:background="@drawable/bound_round"
        android:onClick="btn"
        android:text="Reset"
        android:textSize="18sp" />
</RelativeLayout>